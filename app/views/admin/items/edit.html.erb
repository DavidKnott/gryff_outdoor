<h1>Edit Item Page</h1>

<%= form_for [@admin, @item] do |f| %>
  <h3>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </h3>
  <h3>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </h3>
  <h3>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </h3>
  <h3>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </h3>
  <h3>
    <%= f.submit %>
  </h3>
<% end %>
